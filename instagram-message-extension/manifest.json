{
  "manifest_version": 3,
  "name": "InstaLearning",
  "version": "1.0",
  "description": "Learn while you scroll - shows custom messages between Instagram stories and reels",
  "permissions": ["storage"],
  "host_permissions": ["https://www.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
